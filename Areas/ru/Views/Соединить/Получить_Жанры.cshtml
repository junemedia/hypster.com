@model List<hypster_tv_DAL.MusicGenre>
@{
    Layout = null;
}


<div id="ConnectGenresCT" style=" float:left; width:100%; height:155px; overflow:hidden;">

    @foreach (var item in Model)
    {
        <div class="sbItem" onclick="window.location='/ru/Соединить/searchGenre/@item.Genre_ID';">
            <input type="radio" value="@item.GenreName" disabled="disabled" style=" float:left; margin-top:6px; padding:0px;" />
            <div>@item.GenreName</div>
        </div>
    }
    
</div>

<div style=" float:left; width:100%; height:22px; margin-top:7px; overflow:hidden; text-align:center;">

    <div onclick="DisplayMoreGenres()" style=" width:120px; height:22px; background-color:#727d80; margin:auto; cursor:pointer; border-radius:2px;">Больше Жанров</div>

</div>


<script type="text/javascript">

    function DisplayMoreGenres() {
        $("#ConnectGenresCT").css("height", ($("#ConnectGenresCT").height() + 155) + "px");
    }

</script>