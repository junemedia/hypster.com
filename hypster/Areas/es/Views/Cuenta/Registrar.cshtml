@model hypster.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Hypster | Registrarse";
    ViewBag.Desc = "";

    Layout = "~/Areas/es/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        RenderRegister();
    });
    $(window).resize(function () {
        RenderRegister();
    });
</script>





<div class="boxContRight boxContRightTop">
    <div id="listenSlide1" class="slideRight">



    
                    <div style=" float:left; width:665px; min-height:250px; margin:0 0 0 0; padding:10px; text-align:left; background-color:#292929;">
                         @using (Html.BeginForm("Registrar", "Cuenta", FormMethod.Post))
                         {
            
                            <div style=" font-size:27px;">
                                Registrarse
                            </div>
            

            
                            <div style=" float:left; width:100%; font-size:18px; margin-top:10px;">
                                Correo Electrónico:<br />
                                <input type="text" id="email" name="email" value="@ViewBag.email" class="txtRegister" maxlength="50" style=" width:645px;" />
                            </div>
             
                             
                            <div style="float:left; width:50%; font-size:18px; margin-top:10px;">
                                Nombre de Usuario:<br />
                                <input type="text" id="username" name="username" value="@ViewBag.username" class="txtRegister" maxlength="20" style=" width:312px;" />
                            </div>

                            
                            <div style="float:right; width:50%; font-size:18px; margin-top:10px;">
                                Contraseña:<br />
                                <input type="password" id="password" name="password" value="" class="txtRegister" maxlength="20" style=" width:312px;" />
                            </div>
             
                            
                            <div style=" float:left; width:100%; margin-top:10px;">

                                <div style=" float:left; font-size:18px; margin-top:10px;">
                                    <input type="checkbox" id="I_agree" name="I_agree" />Estoy de Acuerdo con los <a href="/hypster/Terms_of_Service" target="_blank" style=" text-decoration:underline;">Términos y Condiciones</a>
                                </div>
         
                                <input type="submit" value="Registrarse" style=" float:right; width:200px; height:35px; font-size:18px; margin-top:7px; margin-right:15px; border-radius:3px; " />
                            </div>
        
             
                            @Html.ValidationSummary(true, "", new { @class = "txtValidator" })
                        }
                    </div>
    </div>
</div>






<div class="boxContLeft">
    <div id="listenSlide2" class="slideLeft" style=" min-height:96px;">



        <div class="connectHead"></div>


    </div>
</div>



