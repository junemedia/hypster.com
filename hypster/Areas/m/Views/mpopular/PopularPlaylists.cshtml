@model List<hypster_tv_DAL.Playlist>
@{
    Layout = null; 
}



<div id="listenSlideContHolder" style=" float:right; width:100%; min-height:680px; ">
<div class="PopularPlaylists">



        <div class="PopularHeaderCont">
            <div id="PopularPlaylistsSlide2_header">
                <div class="FeaturedHeaderBack">
                    <a href="/m/mplaylists">Popular Playlists</a>
                </div>
                <div class="FeaturedSubHeader"></div>
            </div>
        </div>






        @{
            int back_id = 1;
        }
        <div style="float:right; width:100%; min-height:295px; margin-top:5px; ">


            <div class="PopularPlstsCont">
            @for (int i = 0; i < 7; i++)
            {
                if (i < Model.Count)
                {
                    <div @if (back_id == 1){ <text>class="PlstItm"</text> }else{<text>class="PlstItmB"</text>} onclick="OpenPlayerM('/m/mplaylists/user/@(Model[i].username)?@(Model[i].id)');">
                        <div class="PlstTitle">@Model[i].name</div>
                        
                        <a class="PlstLstn" title="play"></a>
                        
                        <a class="PlstViews" title="@Model[i].ViewsNum views">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model[i].ViewsNum)</a>
                        <a class="PlstLikes" title="@Model[i].Likes likes">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model[i].Likes)</a>
                    </div>
                }

                back_id = back_id * -1;
            }
            </div>




            <div class="PopularPlstsCont">
            @for (int i = 7; i < 14; i++)
            {
                if (i < Model.Count)
                {
                    <div @if (back_id == 1) { <text>class="PlstItm"</text>} else {<text>class="PlstItmB"</text>} onclick="OpenPlayerM('/m/mplaylists/user/@(Model[i].username)?@(Model[i].id)');" >
                        <div class="PlstTitle">@Model[i].name</div>
                        <a class="PlstLstn" title="play"></a>

                        <a class="PlstViews" title="@Model[i].ViewsNum views">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model[i].ViewsNum)</a>

                        <a class="PlstLikes" title="@Model[i].Likes likes">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model[i].Likes)</a>
                    </div>
                }

                back_id = back_id * -1;
            }
            </div>


        </div>



        <div id="PP_PlstPreview">
            <div class="LdingPrev">Loading...</div>
        </div>


</div>
</div> 