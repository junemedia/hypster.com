@using Recaptcha;

@model hypster.ViewModels.AddToPlayListViewModel
@{
    Layout = null;
}



<script type="text/javascript">
    $(document).ready(function () {
        $("#SendFeedbackContPopup1").css("display", "block");
        $("#SendFeedbackContPopup1").css("margin-left", (($(window).width() - 670) / 2) + "px");
        $("#SendFeedbackContPopup1").css("margin-top", (($(window).height() - 350) / 2) + "px");
    });

    function SendFeedbackOnComplete() {
        HideAddToPlaylist();
        $('#MainContHolder').css('display', 'block');

        var rand_num = Math.floor((Math.random() * 100000) + 1);
        $('#cb_hf').val(rand_num);
    }
</script>





<div id="SendFeedbackContPopup1">
    

    <div class="ExitBtnCont">
        <img alt="" src="/imgs/exit_button.png" onclick="HideAddToPlaylist();" />
    </div>


    <div style=" float:left; width:100%; height:100%; background-color:#343434;">

        <div style=" float:left; width:99%; padding-left:1%; margin-top:10px; font-size:20px; color:#fcf088; text-align:left; ">
            Send us any suggestions how to improve hypster music player
        </div>


        <div style=" float:left; margin-top:13px; width:650px; ">
            @using (Ajax.BeginForm("SubmitSendFeedbackPopup", "playlist", new AjaxOptions { UpdateTargetId = "MessageBox1", HttpMethod = "POST", OnComplete = "SendFeedbackOnComplete" }))
            {
                            
                <div style=" float:right; width:100%;">
            
                    <div style=" float:right; width:640px; height:33px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                        <div style=" float:left; width:75px; margin:3px 0 0 0; text-align:right; color:#2f5262;">Email:</div>
                        <input type="text" name="YourEmail" id="YourEmail" value="" style=" float:left; outline: none; width:450px; height:22px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                    </div>

                    <div style=" float:right; width:640px; height:33px; margin:5px 0 0 0; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                        <div style=" float:left; width:75px; margin:3px 0 0 0; text-align:right; color:#2f5262;">Subject:</div>
                        <input type="text" name="Subject" id="Subject" value="" style=" float:left; outline: none; width:450px; height:22px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                    </div>

                    <div style=" float:right; width:640px; height:150px; margin:5px 0 0 0; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                        <div style=" float:left; width:75px; margin:3px 0 0 0; text-align:right; color:#2f5262;">Message:</div>
                        <textarea type="text" name="Message" id="Message" value="" style=" float:left; outline: none; width:540px; height:140px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  ></textarea>
                    </div>

                </div>
                            
        
                <div style=" float:right; width:100%; text-align:right; margin-top:5px;">
                    
                    <div id="MessageBox1" style=" float:left;"></div>

                    <input type="button" value="Cancel" onclick="HideAddToPlaylist();" style=" float:right; width:120px; height:32px; background-color:#42606e; border:2px solid #42606e; border-radius:3px; color:#FFFFFF; font-family:'Lato', sans-serif; font-size:16px;" />    
                    <input type="submit" value="Submit" onmousedown="this.value='Wait...';" style=" float:right; width:220px; height:32px; background-color:#42606e; border:2px solid #42606e; border-radius:3px; color:#FFFFFF; font-family:'Lato', sans-serif; font-size:16px; margin-right:6px;" />
                </div>
            }
        </div>

    </div>




</div>





<script type="text/javascript">
    function HideAddToPlaylist() {
        Show_Content_PopupPlayer();
    }
</script>