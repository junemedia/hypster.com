           <div class="PopularPlaylists">
               <div class="PopularHeaderCont">
                    <div id="PopularPlaylistsSlide2_header">
                        <div class="FeaturedHeaderBack">
                            <a style=" margin-right:140px;">Personal Info</a>
                        </div>
                        <div class="FeaturedSubHeader"></div>
                    </div>
                </div>
            </div>




            <div style=" float:right; width:100%;">
           


                <div style=" float:right; width:100%; margin-bottom:0px; ">

                        
                        <div style=" float:right; width:100%; margin:16px 0 0 20px; ">
            
                            <div style=" float:left; width:350px; height:40px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; width:60px; margin:3px 0 0 0; text-align:right; color:#2f5262;">Name:</div>
                                <input type="text" name="Name" id="Name" value="@Model.curr_user.name" maxlength="40" style=" float:left; outline: none; width:250px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
