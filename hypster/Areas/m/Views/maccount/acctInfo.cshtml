                            <div style=" float:left; width:325px; height:40px; margin:10px 0 0 0px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; width:90px; margin:3px 0 0 0; text-align:right; color:#2f5262;">Username:</div>
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">@Model.curr_user.username</div>
                            </div>

                        </div>
        

                        <div style=" float:right; width:100%; margin:15px 0 0 20px; ">
            
                            <div style=" float:left; width:400px; height:40px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">Email:</div>
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">@Model.curr_user.email</div>
                            </div>

                            <div style=" float:left; width:275px; height:40px; margin:10px 0 0 0px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">Member Since:</div>
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">@Model.curr_user.regdate.ToShortDateString()</div>
                            </div>

                        </div>




                        <div style=" float:right; width:100%; margin:15px 0 0 20px; ">
            
                            <div style=" float:left; width:350px; height:40px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">City:</div>
                                <input type="text" name="City" id="City" value="@Model.curr_user.city" maxlength="30" style=" float:left; outline: none; width:180px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                            </div>

                            <div style=" float:left; width:350px; height:40px; margin:10px 0 0 0px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">Country:</div>
                                <input type="text" name="Country" id="Country" value="@Model.curr_user.country" maxlength="30" style=" float:left; outline: none; width:160px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                            </div>

                            <div style=" float:left; width:152px; height:40px; margin:10px 0 0 0px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">Zip:</div>
                                <input type="text" name="Zip" id="Zip" value="@Model.curr_user.zipcode" maxlength="10" style=" float:left; outline: none; width:60px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                            </div>

                        </div>



                        <div style=" float:right; width:100%; margin:15px 0 0 20px; ">
            
                            <div style=" float:left; width:100px; height:40px; border:1px solid #DEDEDE; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                <div style=" float:left; margin:3px 0 0 7px; color:#2f5262;">Birth Date:</div>
                            </div>



                            <div style=" float:left; width:60px; height:40px; border:1px solid #DEDEDE; margin-left:20px; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                    
                                <select id="DOB_MM" name="DOB_MM" style=" float:left; outline: none; width:50px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i" @if (Model.curr_user.birth != null && Model.curr_user.birth.Value.Month == i)
                                                            { <text>selected="selected"</text>}>@i</option>
                                    }
                                </select>

                            </div>



                            <div style=" float:left; width:60px; height:40px; border:1px solid #DEDEDE; margin-left:20px; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                    
                                <select id="DOB_DD" name="DOB_DD" style=" float:left; outline: none; width:50px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                    @for (int i = 1; i <= 31; i++)
                                    {
                                        <option value="@i" @if (Model.curr_user.birth != null && Model.curr_user.birth.Value.Day == i)
                                                            { <text>selected="selected"</text>} >@i</option>
                                    }
                                </select>

                            </div>

                            <div style=" float:left; width:90px; height:40px; border:1px solid #DEDEDE; margin-left:20px; background-color:#DEDEDE; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                    
                                <select id="DOB_YYYY" name="DOB_YYYY" style=" float:left; outline: none; width:80px; height:26px; margin:2px 0 0 5px; background-color:#DEDEDE; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                                    @for (int i = 1900; i <= 2012; i++)
                                    {
                                        <option value="@i" @if (Model.curr_user.birth != null && Model.curr_user.birth.Value.Year == i)
                                                            { <text>selected="selected"</text>}>@i</option>
                                    }
                                </select>
                            </div>

                        </div>



                        <div style=" float:left; width:100%; min-height:25px; margin-top:15px;">

                            <div id="chngPassBtn" onclick="$('#chngPassBtn').css('display','none'); $('#changePassContHolder1').css('display','block');" style=" float:left; margin-left:0px; font-size:16px; color:#FFFFFF; background-color:#42606e; padding:3px 10px 3px 10px; border-radius:3px; cursor:pointer;">
                                Change Password
                            </div>

                            <div id="changePassContHolder1" style=" display:none; line-height:25px; width:380px; text-align:right;">
                            
                                Old Password: <input type="password" name="OldUserPass" id="OldUserPass" maxlength="20" style=" width:230px; height:18px; background-color:#dedede; border:none; border-radius:2px;" />
                                <br />
                                New Password: <input type="password" name="NewUserPass" id="NewUserPass" maxlength="20" style=" width:230px; height:18px; background-color:#dedede; border:none; border-radius:2px;" />
                                <br />
                                Rep New Password: <input type="password" name="RepNewUserPass" id="RepNewUserPass" maxlength="20" style=" width:230px; height:18px; background-color:#dedede; border:none; border-radius:2px;" />
                            </div>

                        </div>



                        <div style=" float:left; width:100%; min-height:25px; margin-top:10px;">
                                
                            <div style=" float:left; margin-left:0px; font-size:20px; color:#404040;">
                                I am interested in:
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px; color:#385664;">
                                <input type="radio" name="interestP" value="1" @if(Model.curr_user.user_interest == 1){<text>checked="checked"</text>} /> Players
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px; color:#385664;">
                                <input type="radio" name="interestP" value="2" @if(Model.curr_user.user_interest == 2){<text>checked="checked"</text>} /> Playlists
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px; color:#385664;">
                                <input type="radio" name="interestP" value="3" @if(Model.curr_user.user_interest == 3){<text>checked="checked"</text>} /> Both
                            </div>

                        </div>


                        <div style=" float:left; width:100%; margin-top:3px; color:#CC0000; font-size:18px;">
                            @ViewBag.ErrorStr
                        </div>

                </div>


            </div>



    </div>
</div>



<div class="boxContRight">
    <div id="listenSlide2" class="slideRight" style=" min-height:190px;">
        

            
            <div style=" float:left; width:1040px;">

                <div style=" float:left; width:100%; color:#FFFFFF; font-family:'Lato', sans-serif; font-weight:lighter; font-size:24px; margin:10px 0 10px 0;">
                    My Photos
                </div>


                <div style=" float:left; width:100%; margin:5px 0 0 0px;">

                    @{ int icount = 0; }
                    @foreach (hypster_tv_DAL.Photo item in Model.userPhotos_list)
                    {
                        <div style=" float:left; width:120px; height:120px; overflow:hidden; margin:5px; background-color:#555555; border-radius:2px; cursor:pointer;">
                            <img onclick="ShowImage('@Url.Content("/userpics/" + User.Identity.Name + "/" + @item.id + ".jpg")');" src="@Url.Content("/userpics/" + User.Identity.Name + "/" + @item.id + "_s.jpg")" alt="" style=" float:left; width:120px; height:120px; margin:0px; background-color:#333333; border-radius:2px;" onerror="this.src='/imgs/user_img_nf.png';" />
                        </div>
                        
                        if (icount > 12)
                        {
                            break;
                        }
                        icount = icount + 1;
                    }

                    <div onclick="window.location='/account/pics';" style=" float:left; width:120px; height:120px;  margin:5px; background-color:#555555; border-radius:2px; line-height:100px; font-size:80px; cursor:pointer; text-align:center;">
                        +
                    </div>

                    <div onclick="window.location='/account/pics';" style=" float:left; width:120px; height:120px;  margin:5px; background-color:#555555; border-radius:2px; line-height:113px; font-size:23px; cursor:pointer; text-align:center;">
                        MANAGE
                    </div>

                </div>

            </div>
            


    </div>
