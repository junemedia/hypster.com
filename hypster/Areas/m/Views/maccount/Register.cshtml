@model hypster.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Hypster - free music online - player for tumblr";
    ViewBag.Desc = "";
    Layout = "~/Areas/m/Views/Shared/_Layout_Mobile.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () { RenderPage(); AlignAcctInfoHeader(); });
    $(window).resize(function () { RenderPage(); AlignAcctInfoHeader(); });
</script>





<div class="boxContRight boxContRightTop">
    <div id="listenSlide1" class="slideRight" style=" min-height:660px; ">
                    

            <h2 style=" width:100%; padding:8px 0 8px 0; background-color:#151515; border-radius:3px; margin:2px 0 13px 0; color:#fcf088; ">&nbsp;&nbsp;Become a member and enjoy free unlimited music</h2>



            <div style=" float:left; width:98%; min-height:250px; margin:0; padding:1%; text-align:left; background-color:#292929; border-radius:3px;">
                    @using (Html.BeginForm("Register", "maccount", FormMethod.Post))
                    {
                    <div style=" float:left; width:98%; background-color:#FCF088; margin-top:1px; padding-left:1%; border-radius:3px;">
                        @Html.ValidationSummary(true, "", new { @class = "txtValidator" })
                    </div>
                             
            
            
                    <div style=" float:left; width:100%; font-size:18px; margin-top:3px;">
                        Email:<br />
                        <input type="text" id="email" name="email" value="@ViewBag.email" class="txtRegister" maxlength="50" style=" width:98%;" />
                    </div>
             
                             
                    <div style="float:left; width:100%; font-size:18px; margin-top:10px;">
                        Username:<br />
                        <input type="text" id="username" name="username" value="@ViewBag.username" class="txtRegister" maxlength="20" style=" width:98%;" onblur="checkUserName()" />

                        <div id="checkUserName" style=" float:left;">
                        </div>

                        <script type="text/javascript">
                            function checkUserName() {
                                $("#checkUserName").html("");
                            }
                        </script>

                    </div>

                            
                    <div style="float:right; width:100%; font-size:18px; margin-top:10px;">
                        Password:<br />
                        <input type="password" id="password" name="password" value="" class="txtRegister" maxlength="20" style=" width:98%; float:right; margin-right:5px;" />
                    </div>
                            
                        <div style=" float:left; width:100%; min-height:25px; margin-top:20px;">
                                
                            <div style=" float:left; margin-left:0px; font-size:20px; color:#FCF088;">
                                I am interested in:
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px;">
                                <input type="radio" name="interestP" value="1" /> Players
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px;">
                                <input type="radio" name="interestP" value="2" /> Playlists
                            </div>
                            <div style=" float:left; margin-left:25px; font-size:20px;">
                                <input type="radio" name="interestP" value="3" /> Both
                            </div>
                        </div>
                             
                             
                    <div style=" float:left; width:100%; min-height:55px; margin-top:25px; @if(ViewBag.SkipCaptcha == "on"){<text>display:none;</text>}">
    
                        <div style=" float:right; margin:5px 15px 0 0;">
                            <span></span>
                            <!-- start SolveMedia puzzle widget -->
                            <script type="text/javascript">
                                var ACPuzzleOptions = {
                                    tabindex: '0'
                                };
                            </script>
                            <script type="text/javascript" src="http://api.solvemedia.com/papi/challenge.script?k=@ViewBag.ChallengeKey"></script>
                            <noscript>
	                            <iframe height="300" width="500" frameborder="0" src="http://api.solvemedia.com/papi/challenge.noscript?k=@ViewBag.ChallengeKey"></iframe><br />
                                <textarea name="adcopy_challenge" rows="3" cols="40"></textarea>
                                <input type="hidden" name="adcopy_response" value="manual_challenge" />
                            </noscript>
                            <!-- end SolveMedia puzzle widget -->
                        </div>

                        <div style=" float:right;">
                            <img alt="Don’t forget to answer our security question" src="/imgs/reg_hint.jpg" style=" margin-top:115px; float:right;" />
                        </div>
                               
                    </div>
                            
                             
                    <div style=" float:left; width:100%; margin-top:30px;">

                        <div style=" float:left; font-size:18px; margin-top:10px;">
                            <input type="checkbox" id="I_agree" name="I_agree" @if(ViewBag.I_agree == "on"){ <text>checked="checked"</text> } /> I agree to the <a href="/hypster/Terms_of_Service" target="_blank" style=" text-decoration:underline;">terms and conditions</a>
                        </div>


                        <div style=" float:left; font-size:18px; margin-top:10px;">
                            <input type="checkbox" id="checkNewsAboutMusic" name="checkNewsAboutMusic" /> Check if you want to receive news about music, playlists, charts, festivals etc.
                        </div>
                        <div style=" float:left; font-size:18px; margin-top:10px;">
                            <input type="checkbox" id="checkNewsAboutPlayers" name="checkNewsAboutPlayers" /> Check if you want to receive news about Hypster players
                        </div>
                                


                        <input type="submit" value="Register" style=" float:right; width:98%; height:70px; font-size:18px; margin-top:30px; margin:2% 1% 1% 1%; border-radius:3px; " />
                    </div>
                             
                            
                }
            </div>
          

    </div>
</div>






<div class="boxContLeft">
    <div id="listenSlide2" class="slideLeft" style=" min-height:250px;">
        

        <div class="PopularPlaylists">
            <div class="PopularHeaderCont">
                <div id="PopularPlaylistsSlide2_header">
                    <div class="FeaturedHeaderBack">
                        <a style=" margin-right:110px;">Hypster Features</a>
                    </div>
                    <div class="FeaturedSubHeader"></div>
                </div>
            </div>
        </div>



        <div style=" float:right; width:100%; margin-top:20px;">
            
            <div style=" float:left; width:99%; height:43px; line-height:43px; padding-left:1%; background-color:#59666c; border-radius:3px; margin-bottom:10px; font-size:22px;">
                Create an unlimited amount of playlists
            </div>

            <div style=" float:left; width:99%; height:43px; line-height:43px; padding-left:1%; background-color:#59666c; border-radius:3px; margin-bottom:10px; font-size:22px;">
                Add as mnay songs as you want
            </div>

            <div style=" float:left; width:99%; height:43px; line-height:43px; padding-left:1%; background-color:#59666c; border-radius:3px; margin-bottom:10px; font-size:22px;">
                Skip any song at any point
            </div>

            <div style=" float:left; width:99%; height:43px; line-height:43px; padding-left:1%; background-color:#59666c; border-radius:3px; margin-bottom:10px; font-size:22px;">
                Listen to commercial free music
            </div>

            <div style=" float:left; width:99%; height:43px; line-height:43px; padding-left:1%; background-color:#59666c; border-radius:3px; margin-bottom:10px; font-size:22px;">
                Listen to your favorite artist with no restrictions
            </div>

        </div>



    </div>
</div>


