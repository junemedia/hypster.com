@model hypster.ViewModels.getAccountInfo_PrivateViewModel

@{
    ViewBag.Title = "Hypster - free music online - player for tumblr";
    ViewBag.Desc = "";
    Layout = "~/Areas/m/Views/Shared/_Layout_Mobile.cshtml";
}




<script type="text/javascript">
    $(document).ready(function () { RenderPage(); RenderAccountMusic(); });
    $(window).resize(function () { RenderPage(); RenderAccountMusic(); });
</script>






<div class="boxContRight boxContRightTop">
    <div id="listenSlide0" class="slideRight" style=" min-height:150px;">
            

            <div id="SectionMenu1" onclick="window.location='/m/maccount/info';" style=" float:left; width:32%; height:150px; overflow:hidden; margin:0px; background-color:#292929; text-align:center; font-family:'Lato', sans-serif; font-weight:lighter; font-size:29px; color:#CDCDCD; cursor:pointer;">
            
                <div style=" float:left; width:100%; line-height:14px; text-align:center;">
                    <img alt="" src="/imgs/account/create_player_icon_sm.png" style=" margin:20px 0 10px 0;" /><br />
                    Info
                </div>
            
            </div>




            <div id="SectionMenu2" onclick="window.location='/m/maccount/music';" style=" float:left; width:32%; height:150px; overflow:hidden; margin-left:1%; background-color:#181818; text-align:center; font-family:'Lato', sans-serif; font-weight:lighter; font-size:29px; color:#CDCDCD; cursor:pointer;">
            
                <div style=" float:left; width:100%; line-height:14px; text-align:center;">
                    <img alt="" src="/imgs/account/create_playlist_icon_sm.png" style=" margin:20px 0 10px 0;" /><br />
                    Music
                </div>

            </div>





            <div id="SectionMenu3" onclick="window.location='/m/maccount/friends';" style=" float:left; width:32%; height:150px; overflow:hidden; margin-left:1%; background-color:#292929; text-align:center; font-family:'Lato', sans-serif; font-weight:lighter; font-size:29px; color:#CDCDCD; cursor:pointer;">
                
                <div style=" float:left; width:100%; line-height:14px; text-align:center;">
                    <img alt="" src="/imgs/account/create_station_icon_sm.png" style=" margin:20px 0 10px 0;" /><br />
                    Friends
                </div>
            
            </div>


     </div>
</div>
















@using (Html.BeginForm("MusicPost", "maccount", FormMethod.Post))
{ 

<!-- **************SECTION 2*************************** -->
<div id="Section2" style=" display:block;">




<div class="boxContLeft">
    <div id="listenSlide1" class="slideLeft" style=" min-height:310px;">
        
            
                <div style=" float:right; width:100%; margin:0% 1% 1% 1%; text-align:left; ">
                    <div style=" float:left; width:100%; color:#2e3335; font-family:'Lato', sans-serif; font-weight:lighter; font-size:24px; margin:10px 0 10px 0;">
                        &nbsp;My Favorite Genres
                    </div>


                    <div style=" float:left; width:100%; color:#2e3335;">
                            @for (int i = 0; i < Model.musicGenres_list.Count; i++)
                            {
                                <div style=" float:left; width:220px; margin:7px 0 0 10px; font-size:16px;">
                                    <input type="checkbox" name="musicGenres_list" value="@Model.musicGenres_list[i].Genre_ID" @if (@Model.musicGenres_list[i].selected == true) { <text> checked="checked" </text>} /> @Model.musicGenres_list[i].GenreName
                                </div>
                            }
                    </div>
                </div>


    </div>
</div>






<div class="boxContRight">
    <div id="listenSlide2" class="slideRight" style=" min-height:260px;">
        

            <div style=" float:left; width:100%;">
                

                <div style=" float:left; width:715px;">
                        
                        <div style=" float:left; width:100%; height:39px; line-height:39px; margin:2px 0 10px 0px; font-size:20px; color:#f9a317; background:url('/imgs/home/grn_HeaderBack.png') left no-repeat;">
                            &nbsp;My Playlists
                        </div>
                

                        <div style=" float:left; width:100%; margin-top:3px;">
                            @{ int counter_userPlaylists_list = 0; }
                            @foreach (var item in @Model.userPlaylists_list)
                            {
                                if (counter_userPlaylists_list > 6)
                                {
                                    break;
                                }
                                else
                                {
                                    counter_userPlaylists_list++;
                                }


                                if (item.id == Model.curr_user.active_playlist)
                                {
                                    <div style=" float:left; width:100%; height:30px; margin-bottom:1px; margin-top:3px; ">
                                
                                        <div onclick="OpenPlayerM('/m/mplaylists/user/@User.Identity.Name?@item.id');" style=" float:left; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929;  cursor:pointer;">
                                            <img alt="" src="/imgs/play_icon_lte.png" style=" margin:7px 7px 0 7px;" />
                                        </div>

                                        <div onclick="OpenPlayerM('/m/mplaylists/user/@User.Identity.Name?@item.id');" style="float:left; width:60%; height:30px; line-height:30px; margin:0px 4px 0 4px; padding-left:3px; background-color:#292929;  text-align:left; color:#FCF088; cursor:pointer; ">
                                            @item.name
                                        </div>
                                        <div onclick="window.location='/m/mcreate/playlist?playlist_id=@item.id&us_id=@Model.curr_user.id';" style=" float:left; width:35px; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929;  cursor:pointer;">
                                            <img alt="" src="/imgs/action_icons/edit_icon_s.png" style=" margin:5px 7px 0 10px;" />
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div style=" float:left; width:100%; height:30px; margin-bottom:1px; margin-top:3px; ">
                                
                                        <div onclick="OpenPlayerM('/m/mplaylists/user/@User.Identity.Name?@item.id');" style=" float:left; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929;  cursor:pointer;">
                                            <img alt="" src="/imgs/play_icon_lte.png" style=" margin:7px 7px 0 7px;" />
                                        </div>

                                        <div onclick="OpenPlayerM('/m/mplaylists/user/@User.Identity.Name?@item.id');" style="float:left; width:60%; height:30px; line-height:30px; margin:0px 4px 0 4px; padding-left:3px; background-color:#292929;  text-align:left; cursor:pointer; ">
                                            @item.name
                                        </div>
                                        <div onclick="window.location='/m/mcreate/playlist?playlist_id=@item.id&us_id=@Model.curr_user.id';" style=" float:left; width:35px; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929;  cursor:pointer;">
                                            <img alt="" src="/imgs/action_icons/edit_icon_s.png" style=" margin:5px 7px 0 10px;" />
                                        </div>
                                    </div>
                                }
                            }
                            <a href="/m/mcreate/playlist" style=" display:block; float:left; width:230px; height:27px; line-height:27px; text-align:left; background-color:#42606e; color:#FFFFFF; border-radius:3px; margin-top:7px; padding-left:7px; cursor:pointer;">
                                + Create Playlist
                            </a>

                        </div>
                </div>




                
            </div>


    </div>
</div>






<div class="boxContLeft" >
    <div id="listenSlide3" class="slideLeft" style=" min-height:100px;">
            

             <div style=" float:right; width:100%; margin:1%; text-align:left; ">
                    
                    <div style=" float:left; width:100%; color:#2e3335; font-family:'Lato', sans-serif; font-weight:lighter; font-size:24px; margin:5px 0 10px 0;">
                        My Players
                    </div>


                    <div style=" float:left; width:100%; ">
    
                        @{
                        int back_id = 1;
                        }                       
                        @foreach (var item in Model.userPlayers_list)
                        {
                            <div style=" float:left; width:100%; text-align:left;">
                                

                                <div style=" @if (back_id == 1){ <text>background-color:#858c90;</text>}else{<text>background-color:#747e83;</text>} float:left; width:80%; height:35px; line-height:30px; overflow:hidden; margin-top:3px; cursor:pointer; ">
                                    <div style=" float:left; margin:3px 0 0 5px; font-size:16px;">
                                        @item.player_Name
                                    </div>
                                </div>

                                <div onclick="window.location='/m/mcreate/player/@item.Player_Type?Pl_ID=@item.player_ID';" style=" @if (back_id == 1){ <text>background-color:#858c90;</text>}else{<text>background-color:#747e83;</text>} float:left; height:35px; line-height:35px; text-align:left; color:#FFFFFF; font-size:11px; margin-top:3px; margin-left:4px; cursor:pointer;">
                                    <img alt="" src="/imgs/action_icons/edit_icon_s.png" style=" margin:10px 10px 0 10px;" />
                                </div>

                                <div onclick="if(confirm('Are you sure you want to delete?') == true ){window.location='/m/mplayer/getPlayer?ACT=DeletePlayer&Pl_ID=@item.player_ID';}" style=" @if (back_id == 1)
                                                                                                                                                                                             { <text>background-color:#858c90;</text>}
                                                                                                                                                                                             else
                                                                                                                                                                                             {<text>background-color:#747e83;</text>} float:left; height:35px; line-height:35px; text-align:left; color:#FFFFFF; font-size:11px; margin-top:3px; margin-left:4px; cursor:pointer;">
                                    <img alt="" src="/imgs/action_icons/delete_icon_s.png" style=" margin:10px 10px 0 10px;" />
                                </div>
                            </div>
                            
                                                                                                                                                                                             back_id = back_id * -1;
                        }
                        <a href="/m/mcreate/player" style="display:block; float:left; width:180px; height:27px; line-height:27px; text-align:left; background-color:#42606e; color:#FFFFFF; border-radius:3px; margin-top:5px; padding-left:7px; cursor:pointer;">
                            + Create Player
                        </a>

                    </div>


            </div>
        

    </div>
</div>







<div class="boxContRight" >
    <div id="listenSlide4" class="slideRight" style=" min-height:260px;">
        

           <div style=" float:left; width:100%; margin-bottom:10px;">
            
                

                <div id="stationsA" style=" float:left; width:715px;">
                        
                        <div style=" float:left; width:100%; height:39px; line-height:39px; margin:2px 0 10px 0px; font-size:20px; color:#f9a317; background:url('/imgs/home/grn_HeaderBack.png') left no-repeat;">
                            &nbsp;My Stations
                        </div>


                

                        <div style=" float:left; width:100%; margin-top:3px;">
                            @foreach (var item in @Model.radioStation_list)
                            {
                                if (item.RadioStationName != null && item.RadioStationQuery != null)
                                {
                                    <div style=" float:left; width:100%; margin-bottom:4px;">
                            
                                        <div onclick="OPLRRadio('@item.RadioStationQuery.Replace(" ", "+")')" style=" float:left; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929;  cursor:pointer;">
                                            <img alt="" src="/imgs/play_icon_lte.png" style=" margin:7px 7px 0 7px;" />
                                        </div>


                                        <div onclick="OPLRRadio('@item.RadioStationQuery.Replace(" ", "+")')" style=" float:left; width:55%; height:26px; line-height:25px; background-color:#292929; padding:2px 2px 2px 10px;  margin-left:4px; cursor:pointer;">
                                            @item.RadioStationName
                                        </div>

                        
                                        <div onclick="if(confirm('Are you sure you want to delete?') == true){window.location='/m/maccount/deleteStation?station=@item.RadioStation_ID';}" style=" float:left; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#292929; margin-left:4px; cursor:pointer;">
                                            <img alt="" src="/imgs/action_icons/delete_icon_s.png" style=" margin:7px 7px 0 7px;" />
                                        </div>
                                    </div>
                                }
                            }
                            <a href="/m/mcreate/station" style=" display:block; float:left; width:180px; height:27px; line-height:27px; text-align:left; background-color:#42606e; color:#FFFFFF; border-radius:3px; margin-top:5px; padding-left:7px; cursor:pointer;">
                                + Create Station
                            </a>
                        </div>
                </div>

             

                
            </div> 


    </div>
</div>



</div>
<!-- **************SECTION 2*************************** -->





    
<div class="boxContLeft" >
    <div id="listenSlide6" class="slideLeft">
            
            <a name="plstil"></a>
            
            <div style=" float:right; width:100%; min-height:30px; margin-bottom:1px; margin-top:3px; ">
                
                <div style=" float:left; width:100%; color:#2e3335; font-family:'Lato', sans-serif; font-weight:lighter; font-size:24px; margin:5px 0 10px 0;">
                    Playlists I Like
                </div>

                @foreach (var item in Model.playlists_I_like)
                {
                    <div style=" float:right; width:100%; min-height:30px; margin-bottom:1px; margin-top:3px; ">
                            
                            <div onclick="OpenPlayerM('/m/mplaylists/user/@(item.username)?@(item.id)')" style=" float:left; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#858c90;  cursor:pointer;">
                                <img alt="" src="/imgs/play_icon_lte.png" style=" margin:7px 7px 0 7px;" />
                            </div>

                            <div onclick="OpenPlayerM('/m/mplaylists/user/@(item.username)?@(item.id)')" style="float:left; width:80%; height:30px; line-height:30px; margin:0px 4px 0 4px; padding-left:3px; background-color:#858c90;  text-align:left; color:#FCF088; cursor:pointer; ">
                                @item.name
                            </div>
                            <div onclick="if(confirm('Are you sure you want to delete?') == true){ window.location='/m/maccount/DeleteLikedPlaylist?playlist_id=@item.id&us_id=@Model.curr_user.id'; }" style=" float:left; width:35px; height:30px; line-height:30px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#858c90;  cursor:pointer;">
                                <img alt="" src="/imgs/action_icons/delete_icon_s.png" style=" margin:5px 7px 0 10px;" />
                            </div>

                    </div>
                }
            </div>  


</div>
</div>








<div class="boxContLeft" >
    <div id="listenSlide7" class="slideLeft">
            


            <div style=" float:right; width:100%;">
                 
                 <input type="submit" value="Save Changes" style=" float:right; width:280px; height:48px; line-height:48px; background-color:#42606e; border-radius:3px; color:#FFFFFF; font-family:'Lato', sans-serif; font-weight:lighter; font-size:30px; text-align:center; cursor:pointer; " />

            </div>


    </div>
</div>



}


