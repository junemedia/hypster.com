@model hypster.ViewModels.listenViewModel
@{
    Layout = null;
}




<div style=" float:left; width:100%; height:39px; line-height:39px; margin:0 0 5px 0px; padding-bottom:3px; font-size:20px; color:#f9a317; background:#1b1b1b url('/imgs/home/grn_HeaderBack.png') left no-repeat;">
    &nbsp;&nbsp;Radio Stations
</div>




<div class="contMiddle" style=" display:block; margin-bottom:5px;">
    <div class="radioSearch">
        <input type="text" id="stationName" name="stationName" value=" Enter Artist, Song or Genre" onfocus="if(this.value == ' Enter Artist, Song or Genre') this.value = '';" onblur="if(this.value == '') this.value = ' Enter Artist, Song or Genre';" />
        <div class="btnRadioSearch" onclick="CustomRadioStation()">Listen</div>
    </div>
</div>




@foreach (var item in Model.genres_list)
{
    <div class="plItem" onclick="OPLRRadio('@HttpUtility.UrlEncode(item.GenreName.Replace("&", "_and_"))');">
        <div class="plName">@item.GenreName</div>
        <a class="plPlay" title="Play playlist"></a>
    </div> 
}






<div style=" float:left; width:100%; height:39px; line-height:39px; margin:15px 0 12px 0px; padding-bottom:3px; font-size:20px; color:#f9a317; background:#1b1b1b url('/imgs/home/grn_HeaderBack.png') left no-repeat; ">
    &nbsp;&nbsp;Charts
</div>

@foreach (var item in Model.charts_list)
{
    <div class="plItem" onclick="OpenPlayerM('/m/mplaylists/chart/@(item.Chart_GUID)');">
        <div class="plName">@item.Chart_Name</div>
        <a class="plPlay" title="Play playlist" ></a>
    </div>  
}








<div style=" float:left; width:100%; height:39px; line-height:39px; margin:15px 0 12px 0px; padding-bottom:3px; font-size:20px; color:#f9a317; background:#1b1b1b url('/imgs/home/grn_HeaderBack.png') left no-repeat;">
    &nbsp;&nbsp;Festivals
</div>

@foreach (var item in Model.festivals_list)
{
<div class="plItem" onclick="OpenPlayerM('/m/mplaylists/festival/@(item.Festival_GUID)');">
    <div class="plName">@item.Festival_Name</div>
    <a class="plPlay" title="Play playlist" ></a>
</div>  
}


