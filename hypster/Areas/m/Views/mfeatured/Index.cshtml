<script type="text/javascript">

    function StartTagsSearch() {
        var ss_str = $("#txtSearchString").val();

        if (ss_str != " Enter Tag Name") {
            ss_str = ss_str.replace(" ", "+");
            ss_str = ss_str.replace("/", "+");
            ss_str = ss_str.replace("\\", "+");
            ss_str = ss_str.replace("&", "+");
            ss_str = ss_str.replace("$", "+");
            ss_str = ss_str.replace("?", "+");
            ss_str = ss_str.replace("!", "+");
            window.location = "/tags/" + ss_str;
        }
    }

</script>
