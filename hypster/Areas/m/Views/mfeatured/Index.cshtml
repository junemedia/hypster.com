<script type="text/javascript">
    active_menu = ".mConnect";
    $(".mConnect").css("background-color", "#191919");


    $(document).ready(function () { 
        RenderPage(); 
         
        setTimeout('StartSlideshow()', 2000); 

        lsnLoadPopularPlsts();

    });
    $(window).resize(function () { RenderPage(); });




    function loadPopPlaylistData() {
        
        @{ int load_int = 2000; Random r = new Random(); }
        @foreach (var item in Model.featured_playlists)
        {   
            load_int = r.Next(1000, 5000);
            <text>setTimeout(function() { LoadLiveRadioThumbs(this, @item.FeaturedPlaylist_PlaylistID, @item.FeaturedPlaylist_UserID, @item.FeaturedPlaylist_ID);}, @load_int);</text>
        }

    }

   

    function LoadLiveRadioThumbs(obj, pl_id, us_id, g_id) {
        
        $.ajax({
            type: "POST",
            url: "/playlist/getPlaylistDetailsPreviewPlst?PL_ID=" + pl_id + "&US_ID=" + us_id,
            async: true,
            success: function (data) {
                $("#PopPl_" + g_id).html(data);
            }
        });
    }
</script>






