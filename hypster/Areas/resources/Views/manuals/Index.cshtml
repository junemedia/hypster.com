@using System.Configuration;

@model List<hypster_tv_DAL.Manual>
@{
    ViewBag.Title = "How to use | Hypster - free playlist and player online";
    ViewBag.Desc = "Learn how to create and embed music players, create playlists and more";
    Layout = "~/Views/Shared/_Layout2.cshtml";

    int counter = 1;
}

<script type="text/javascript">
    active_menu = ".mHowTos";
    //$(".mHowTos").css("color", "#d4ae52");
</script>

<div style="float:left; padding:7px 0 7px 0; border-top:1px solid #e1e1e1; border-bottom:1px solid #e1e1e1;">
    <div style="float:left; width:100%; height:95px; border-top:1px solid #e1e1e1; border-bottom:1px solid #e1e1e1;">
        <div style="margin:auto; width:700px; padding:21px 0 0 0; color:#454545; font-size:22px;">
            <div style="float:left; width:700px;">
                <span style="color:#d4ae52;">CONFUSED?</span> We’re here to answer your questions. If you can’t find what you're looking for, just shoot us an email: info@hypster.com.
            </div>
        </div>
    </div>
</div>

<div style="float:left; width:68%;">
        

        <div style="margin:15px 0 0 0; font-size:20px; color:#d4ae52;">
            Frequently asked questions
        </div>

    
        <div style="float:left; width:824px; margin:10px 0 0 0;">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div onclick="window.location='/resources/manuals/details/@Model[i].Manual_Guid';" style="float:left; width:100%; height:30px; line-height:30px; margin:6px 0 0 0; font-size:18px; cursor:pointer;">@(counter)) @Model[i].Manual_Header</div>
                
                counter += 1;

                if (counter == 15)
                {
                    break;
                }
            }
        </div>


</div>

