@{
    ViewBag.Title = "Создать плейлист | плеер для Tumblr | Hypster ";
    ViewBag.Desc = "Поиск песен, создать плейлист онлайн бесплатно, создать плеер для Tumblr или блоггера, слушать музыку YouTube, создать свой собственный плейлист онлайн бесплатно.";
    ViewBag.ActivePage = "hypster";
    
    Layout = "~/Areas/ru/Views/Shared/_Layout.cshtml";
}

<script src="/scripts/jquery.cycle.all.latest.js" type="text/javascript"></script>



<script type="text/javascript">
    active_menu = ".mHypster";
    $(".mHypster").css("background-color", "#191919");
    

    $(document).ready(function () {
        RenderHome();
    });
    $(window).resize(function () {
        RenderHome();
    });
    $(document).ready(function () {
        setTimeout('StartSlideshow()', 2000);
    });
</script>






