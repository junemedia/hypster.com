            window.speechSynthesis.speak(msg1);

            var msg2 = new SpeechSynthesisUtterance('To listen to the tutorial press 1. Please press any Key to continue.');
            window.speechSynthesis.speak(msg2);

            //var msg3 = new SpeechSynthesisUtterance('You can use numbers and letters, arrows, enter and space and voice comands for your navigation.');
            //window.speechSynthesis.speak(msg3);
        }

    });
</script>


<script type="text/javascript">
    function HandleKeyAction(e) {

        if (is_speech_sound == 1) {
            window.speechSynthesis.cancel();
        }


        var KEY_CODE = 0;

        if (window.event) {
            KEY_CODE = window.event.keyCode;
        }
        else {
            KEY_CODE = e.which;
        }


        if (KEY_CODE == 49) {

            $("#msgBox1").html("loading tutorial...");


            window.location = '/black/srhome/tutorial';
                

            return;
        }


        window.location = '/black/srhome/step_2';

    }




    function startHypster() {

        window.location = '/black/srhome/step_2';
    }

</script>

