<script type="text/javascript">

    var CURR_STATE = 1;

    function HandleKeyAction(e) {

        
        //window.speechSynthesis.cancel();
        


        var KEY_CODE = 0;

        if (window.event) {
            KEY_CODE = window.event.keyCode;
        }
        else {
            KEY_CODE = e.which;
        }

        //alert(KEY_CODE);

        if (KEY_CODE == 27) {
            startHypster();
        }


        if (KEY_CODE == 32) {

            if (CURR_STATE == 1) {

                window.speechSynthesis.pause();
                CURR_STATE = 0;
            }
            else {

                window.speechSynthesis.resume();
                CURR_STATE = 1;
            }

        }

    }




    function startHypster() {

        $("#msgBox1").html("loading step 2...");

        $.ajax({
            type: "POST",
            url: "/black/bhome/step_2",
            async: true,
            success: function (data) {
                $("#bContHolder1").html(data);
            }
        });
    }

</script>





