    <script type="text/javascript">

        var check_width = 0;
        var check_height = 0;


        $(document).ready(function () {
            var curr_width = $(window).width();
            var randomnumber = Math.floor(Math.random() * 1100000);

            check_width = $(window).width();
            check_height = $(window).height();


           

            $("#cdc1").css("opacity", "1");


            if (curr_width > 1024) {
                $("#mStyles1").attr("href", "/areas/apps/css/appSite2.css?id=" + randomnumber);
                eraseCookie("cssS");
                createCookie("cssS", "2", 1);
            }
            else {

                if (curr_width < 420) {
                    $("#mStyles1").attr("href", "/areas/apps/css/appSite0.css?id=" + randomnumber);
                    eraseCookie("cssS");
                    createCookie("cssS", "0", 1);
                }
                else if (curr_width >= 420 && curr_width <= 650) {
                    $("#mStyles1").attr("href", "/areas/apps/css/appSite05.css?id=" + randomnumber);
                    eraseCookie("cssS");
                    createCookie("cssS", "05", 1);
                }
