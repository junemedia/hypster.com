@{
    ViewBag.Title = "Listen To Youtube Music | Hypster - own playlist online - playlist for tumblr";
    ViewBag.Desc = "Search music, create playlists and embed them on blogs such as Tumblr or Blogger.";
    ViewBag.ActivePage = "listen";
    Layout = "~/Areas/apps/Views/Shared/_Layout_Apps.cshtml";

    int counter = 0;
}



<script type="text/javascript">
    function loadPopPlaylistData() {
