<div style=" float:left; width:100%;">



            <div class="mListenTopH">
                <div class="listenMenuCont">
                
                        <div id="Menu1" onclick="Open_Plst_Menu1()" title="Search Music">
                            Most Popular
                        </div>

                        <div id="Menu3" onclick="Open_Plst_Menu3(); loadPopPlaylistData_like();" >
                            Most Liked
                        </div>

                        <div id="Menu2" onclick="Open_Plst_Menu2(); loadPopPlaylistData_new();" >
                            New Playlists
                        </div>

                </div>
            </div>



                   


            <!-- TAB 1 -->
            <div id="plstsListenTab1" style=" min-height:640px;">
                        
                <div style=" float:left; width:100%; margin:20px 0 0 13px; ">
                @{counter = 0;}
                @for (int i = 0; i < Model.most_popular_playlists.Count; i++)
                {
                    <div class="plItemFp" onclick="OpenPlsts('@(Model.most_popular_playlists[i].username)?@(Model.most_popular_playlists[i].id)');" onmouseover="DPLDD(this, @Model.most_popular_playlists[i].id, @Model.most_popular_playlists[i].userid);" onmouseout="HPLDD(event, this);">
                                
                        <div class="plNameFp">@Model.most_popular_playlists[i].name</div>
                                
                        <a class="PlstViewsFp" title="@Model.most_popular_playlists[i].ViewsNum views">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model.most_popular_playlists[i].ViewsNum)</a>
                        <a class="PlstLikesFp" title="@Model.most_popular_playlists[i].Likes likes">@hypster.Controllers.helpers.PlaylistHelper.DisplayViews(Model.most_popular_playlists[i].Likes)</a>

                        <a class="plPlayFp" title="play"></a>

                        <div class="innrFp" id="PopPl_@Model.most_popular_playlists[i].id"></div>
                    </div>
                            
                            
                            
                    if (counter == 14)
                    {   
                        <div style=" float:left; width:100%; height:39px; line-height:39px; margin:6px 0 10px -12px; font-size:20px; color:#FCF088; "></div>
                        counter = -1;
                    }
                    counter++;
                }
                </div>

            <!-- TAB 1 -->
            </div>
            





