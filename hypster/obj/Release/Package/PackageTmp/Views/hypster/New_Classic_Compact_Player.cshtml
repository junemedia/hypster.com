@using System.Configuration;

@model hypster.ViewModels.GetPlayerViewModel
@{
    ViewBag.Title = "New Classic Compact Player";
    ViewBag.Desc = "get new player for Tumblr code";
}
<script type="text/javascript" src="/scripts/jscolor/jscolor.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        refreshPlayer();
    });
</script>






<div class="crtPlstHdr1">
    <div class="listenMenuCont">

        <div id="CreatePlaylistSection1" onclick="window.location='/create/player';" title="Search Music" style=" height:33px; color:#47bb90; border-bottom:3px solid #47bb90; margin-top:2px;">
            CREATE PLAYER
        </div>

        <div id="CreatePlaylistSection2" onclick="window.location='/create/playlist';" title="Listen Playlists">
            CREATE PLAYLIST
        </div>

        <div id="CreatePlaylistSection3" onclick="window.location='/create/station';" title="Listen Radio Stations">
            CREATE STATION
        </div>

    </div>
</div>





<div style=" float:left; width:100%; margin:30px 0 0 0; ">

    <div class="NPFT_ContHolder" style=" min-height:400px;">



        <div style=" float:left; width:100%; margin-top:5px;">

            <div style="float:left; width:45%; ">
                <div style=" float:left; margin:0px; color:#d4ae52; border-bottom:1px solid #3fbc91; font-family:'Lato', sans-serif; font-size:28px;">
                    CLASSIS PLAYER COMPACT
                </div>
            </div>

            <div style=" float:left; width:55%; color:#000000; font-family:'Lato', sans-serif; font-size:18px;">
                This player can be used on profile pages like Fubar, Vampirefreaks, Myboomerplace or other website who allows to place basic html.<br />
                Also it can be used on blogs or websites.<br />
            </div>

        </div>





        <div id="CPL_Tab2">


            <div id="SampleSettingsHolder">


                <div class="HeaderCompText">
                    PLAYER SETTINGS
                </div>




                <div class="SettingItm">
                    PLAYLIST:
                    <select id="hypPlayer_Playlist_ID" name="hypPlayer_PlaylistID" onchange="refreshPlayer();">
                        @foreach (var item in Model.playlists_list)
                        {
                            <option value="@item.id">@item.name</option>
                        }
                    </select>
                </div>


                <div class="SettingItm">
                    AUTOSTART: <input type="checkbox" checked="checked" id="hypPlayer_Autostart" name="hypPlayer_Autostart" onclick="refreshPlayer()" />
                </div>


                <div class="SettingItm">
                    SHUFFLE PLAYBACK: <input type="checkbox" checked="checked" id="hypPlayer_ShufflePlayback" name="hypPlayer_ShufflePlayback" onclick="refreshPlayer()" />
                </div>



                <div class="SettingItm">
                    BACKGROUND: <input id="hf_color_bg" name="hf_color_bg" class="color" onchange="refreshPlayer()" style=" width:52px; height:23px; border:none; border-radius:2px;" value="313131" />
                </div>

                <div class="SettingItm">
                    SONG BACKGROUND: <input id="hf_color_songbg" name="hf_color_songbg" class="color" onchange="refreshPlayer()" style=" width:52px; height:23px; border:none; border-radius:2px;" value="656565" />
                </div>

                <div class="SettingItm">
                    SONG CLICKED: <input id="hf_color_song_clicked" name="hf_color_song_clicked" class="color" onchange="refreshPlayer()" style=" width:52px; height:23px; border:none; border-radius:2px;" value="757575" />
                </div>

                <div class="SettingItm">
                    BUTTONS COLOR: <input id="hf_color_btns" name="hf_color_btns" class="color" onchange="refreshPlayer()" style=" width:52px; height:23px; border:none; border-radius:2px;" value="CDCDCD" />
                </div>

                <div class="SettingItm">
                    TEXT COLOR: <input id="hf_color_text" name="hf_color_text" class="color" onchange="refreshPlayer()" style=" width:52px; height:23px; border:none; border-radius:2px;" value="CDCDCD" />
                </div>
              @if (Convert.ToBoolean(ConfigurationManager.AppSettings["AdsEnabled"])) {
                <div style=" float:right; margin:10px 0 0 0;">
                    @Html.Partial("~/Views/hypAds/ad_300x250.cshtml")
                </div>
              }
            </div>




            <div id="SampleContHolder" style=" min-height:450px; text-align:center; border-left:1px solid #d4ae52;">

                <div class="HeaderCompText">PLAYER PREVIEW</div>

                <div style="float:left; width:100%;">
                    Please Note: Skipped songs are due to content owner's lack of meeting YouTube Terms and Conditions.<br />
                    <br />
                    <div id="playerPreview1">
                    </div>
                </div>

            </div>





            <div id="captchaCont1" style=" float:left; width:100%; min-height:55px; margin-top:0px;">

                @if (Model.playlists_list != null && Model.playlists_list.Count > 0)
                {
                    <input type="submit" value="GET CODE" onclick="processCaptcha();" style=" float:left; width:400px; height:47px; line-height:47px; text-align:center; background-color:#3fbc91; border:1px solid #3fbc91; border-radius:2px; margin:0 0 0 50px; font-size:23px; font-weight:bold; cursor:pointer;" />
                }
                else
                {
                    <div style=" float:left; width:100%; color:#CC0000; margin:15px 0 0 0; font-size:16px; ">
                        You need to have ​a ​playlist before ​you can ​creat​e a ​player.
                    </div>
                }

            </div>


            <div id="SampleCodeHolder" style=" display:none; margin-top:15px; ">

                <div class="HeaderCompText">
                    PLAYER CODE
                    <br /><span style=" color:#000000; font-size:12px;">User may paste Hypster player anywhere within "&lt;body&gt;" and "&lt;/body&gt;" tags.</span>
                </div>



                <textarea id="PlayerCodeArea"></textarea>



                <div class="mFollowUsCont1" style="margin-right:20px;">
                    <div class="fuText">
                        Follow Us:
                    </div>
                    <div style=" float:left;">
                        <!-- AddThis Follow BEGIN -->
                        <div class="addthis_toolbox addthis_32x32_style addthis_default_style">
                            <a class="addthis_button_facebook_follow" addthis:userid="Hypster"></a>
                            <a class="addthis_button_twitter_follow" addthis:userid="TheRealHypster"></a>
                            <a class="addthis_button_tumblr_follow" addthis:userid="hypsterblog"></a>
                        </div>
                        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-519140dd4b47ab7b"></script>
                        <!-- AddThis Follow END -->
                    </div>
                </div>
            </div>



        </div>
    </div>



</div>










@if (Convert.ToBoolean(ConfigurationManager.AppSettings["AdsEnabled"])) {
    <div style=" float:left; width:100%; margin:20px 0 20px 0; ">

        <div id="TopAdd1_d8d2362fgki" style=" width:728px; margin:auto;">
            @Html.Partial("~/Views/hypAds/ad_728x90.cshtml")
        </div>
        <!-- 06_25 -->

    </div>
}


<script type="text/javascript">


    function refreshPlayer() {
        var sample_code = "";


        //-----------------------------------------------------------------------------------------------
        var hypAutostart_var = "true";
        if (document.getElementById("hypPlayer_Autostart").checked == false)
            hypAutostart_var = "false";


        var hypPlayerSort_var = "0";
        if (document.getElementById("hypPlayer_ShufflePlayback").checked == true)
            hypPlayerSort_var = "1";

        var Playlist_ID_var = "";
        var object = document.getElementById("hypPlayer_Playlist_ID");
        Playlist_ID_var = object[object.selectedIndex].value;
        //-----------------------------------------------------------------------------------------------



        //-----------------------------------------------------------------------------------------------
        $("#playerPreview1").html("<embed quality=\"high\" style=\"width:250px; height:350px; visibility:visible; \" type=\"application/x-shockwave-flash\" height=\"250\" width=\"350\"  pluginspage=\"http://www.macromedia.com/go/getflashplayer\" border=\"0\" src=\"http://@System.Configuration.ConfigurationManager.AppSettings["hypsterHostName"]/flash_n/player.swf?id=@Model.curr_user.id:" + Playlist_ID_var + ":" + hypPlayerSort_var + "&autoplay=" + hypAutostart_var + "\" FlashVars=\"color_bg=0x" + $("#hf_color_bg").val() + "&color_songbg=0x" + $("#hf_color_songbg").val() + "&color_song_clicked=0x" + $("#hf_color_song_clicked").val() + "&color_btns=0x" + $("#hf_color_btns").val() + "&color_text=0x" + $("#hf_color_text").val() + "\" />");

        $("#PlayerCodeArea").val("");
        $("#PlayerCodeArea").val("<embed quality=\"high\" style=\"width:250px; height:350px; visibility:visible; \" type=\"application/x-shockwave-flash\" height=\"250\" width=\"350\"  pluginspage=\"http://www.macromedia.com/go/getflashplayer\" border=\"0\" src=\"http://@System.Configuration.ConfigurationManager.AppSettings["hypsterHostName"]/flash_n/player.swf?id=@Model.curr_user.id:" + Playlist_ID_var + ":" + hypPlayerSort_var + "&autoplay=" + hypAutostart_var + "\" FlashVars=\"color_bg=0x" + $("#hf_color_bg").val() + "&color_songbg=0x" + $("#hf_color_songbg").val() + "&color_song_clicked=0x" + $("#hf_color_song_clicked").val() + "&color_btns=0x" + $("#hf_color_btns").val() + "&color_text=0x" + $("#hf_color_text").val() + "\" />");
        //-----------------------------------------------------------------------------------------------

    }

    function processCaptcha() {
        $('#SampleCodeHolder').css('display', 'block');
        $('#captchaCont1').css('display', 'none');
    }

</script>