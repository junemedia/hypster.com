@model List<hypster_tv_DAL.FeaturedContent>
@{
    Layout = null;
}


<div class="cycle-slideshow" data-cycle-fx="scrollHorz" data-cycle-pause-on-hover="true" data-cycle-speed="500" data-cycle-timeout="3000" data-cycle-pager=".SlideshowBultesCont" data-cycle-pager-template="">

@{int sld_num = 1;}
@foreach (var item in Model)
{
    if (item.fc_href_mobile != "")
    {
        <img id="HomeSlide@(sld_num)" class="sldShI" style=" width:100%; @if(sld_num > 1){ <text>display:none;</text> } " alt="" src="/imgs/home/home_slideshow/@item.fc_image?id=291872" onclick="window.location='@item.fc_href_mobile';" />
                                                                         sld_num = sld_num + 1;
    }

    if (sld_num == 6)
    {
        break;
    }
}
</div>




<div  class="SlideshowBultesCont">
    @for (var i = 1; i <= 5; i++)
    {
        <div class="slideBulet" onclick="opnSlide('@i');"></div>
    }       
</div>

