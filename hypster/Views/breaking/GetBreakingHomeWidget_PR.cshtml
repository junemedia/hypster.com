@model List<hypster_tv_DAL.newsPost>
@{
    Layout = null;
    int OFFSET = 2;
}

<div class="breakingMCH_Home" >
    <div class="hmBrkTitle" onclick="window.location='/breaking';">
        NEWS
    </div>

    <div class="breakingMCH_MC">
        <div class="arrLeft" onclick="MoveRight()">&nbsp;</div>
        <div id="newsContHH1">
            <div id="newsContHHInn">
            @for (int i = 0; i < 15; i++)
            {
                if (i < Model.Count)
                {
                    <div title="@Model[i].post_title" class="brkngItm" onclick="window.location='/breaking/details/@Model[i].post_guid';">
                        <div class="brkngItmPost" style="background-size:195px; background-image:url('http://@System.Configuration.ConfigurationManager.AppSettings["newsHostName"]/imgs/i_posts/@Model[i].post_image');"></div>
                        <div class="txtBreakingT">@Model[i].post_title</div>
                        <div class="txtBreakingD">@Model[i].post_short_content</div>
                    </div>
                }
            }
            </div>
        </div>
        <div class="arrRight" onclick="MoveLeft()">&nbsp;</div>
    </div>
</div>

<script type="text/javascript">
    var SRL_POS = @(OFFSET);
    $("#newsContHH1").scrollLeft(SRL_POS);
    function MoveLeft() {
        SRL_POS += 636;
        if(SRL_POS > 3181)
        {
            SRL_POS = 3181;
        }
        $("#newsContHH1").animate({ scrollLeft: SRL_POS }, 700);
    }

    function MoveRight() {
        SRL_POS -= 636;
        if(SRL_POS < 0)
        {
            SRL_POS = 0;
        }
        $("#newsContHH1").animate({ scrollLeft: SRL_POS }, 700);
    }
</script>