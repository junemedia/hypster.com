@model List<hypster_tv_DAL.ListenHistory>
@{
    Layout = null;
}


<div style=" float:left; width:320px; min-height:140px; background-color:#555555; border-radius:3px; padding:5px;">

    <div style=" float:right; width:99%; margin:-2px 0 3px 0; color:#d4ae52; cursor:pointer; text-align:right;" onclick="$('#lisHistRes1').html('');">X</div>

    @foreach (var item in Model)
    {
        <a href="@item.ListenHistory_URL" target="_blank" style=" display:block; float:left; width:100%; height:23px; background-color:#505050; line-height:23px; margin:0 0 2px 0; overflow:hidden;">
            @item.ListenHistory_Title
        </a>
    }

    @if(Model.Count == 0)
    {
        <a href="#" target="_blank" style=" display:block; float:left; width:100%; height:23px; background-color:#505050; line-height:23px; margin:0 0 2px 0; overflow:hidden;">
            No history yet.
        </a>
    }

    <div onclick="window.location='/account/history';" style=" float:right; background-color:#323232; border-radius:2px; margin:2px 0px 0 0; padding:2px 8px 2px 8px; color:#d4ae52; text-align:center; cursor:pointer;">
        More
    </div>

</div>