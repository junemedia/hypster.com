@model List<hypster_tv_DAL.newsPost>
@{
    Layout = null;
}<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://hypster.com/main-sitemap.xsl"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
   
    @foreach(var item in Model)
    {
        DateTime dt = (DateTime)item.post_date;
        <url>
            <loc>http://hypster.com/breaking/details/@item.post_guid</loc>
            <xhtml:link rel="alternate" media="only screen and (max-width: 640px)" href="http://hypster.com/apps/appBreaking/details/@item.post_guid" />
            <lastmod>@dt.ToString("s")+00:00</lastmod>
            <changefreq>weekly</changefreq>
            <priority>0.60</priority>
            <image:image>
			    <image:loc>http://hypster.com/imgs/i_posts/@item.post_image</image:loc>
			    <image:caption><![CDATA[@item.post_title]]></image:caption>
		    </image:image>
        </url>
    }

</urlset>
