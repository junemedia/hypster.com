@model List<hypster_tv_DAL.PlaylistData_Song>
@{
    Layout = null;
    int song_limit = Int32.Parse(System.Configuration.ConfigurationManager.AppSettings["Song_LIMIT"]);
}



<div class="playlistItemC" onclick="window.location='/playlists/user/@(ViewBag.username)?@(ViewBag.playlist_id)&rtg=19873';" style=" background-color:#d4ae52;">
    <div class="songTtl" style=" margin:8px 0 0 10px;">PLAY ALL PLAYLIST</div>
    <div class="skpSngBtn" >Play</div>
</div>




<div style=" float:left; width:100%; background-color:#131313; min-height:630px;">
@for (int i = 0; i < Model.Count; i++)
{
    <div id="PlItem_sb_@i" class="playlistItemC">
                            
        <img alt="" src="http://i.ytimg.com/vi/@Model[i].YoutubeId/0.jpg" onclick="plVClick_SideB('@Model[i].YoutubeId', @i)" />
        <div id="songC_sb_@i" class="songTtl" onclick="plVClick_SideB('@Model[i].YoutubeId', @i)">
            @Model[i].Title
        </div>
        <input type="hidden" id="si_sb_@Model[i].YoutubeId" value="@Model[i].id" />
                            
        <div id="songA_sb_@i" class="skpSngBtn" onclick="plVClick_SideB('@Model[i].YoutubeId', @i)">
            Play
        </div>

    </div>
    

    if (i == song_limit)
    {
        break;
    }
}
</div>




@if (Model.Count == 0)
{
    <div class="NsongsMsg">
        No songs in this playlist
    </div>
}



