    <!-- this is setting parent variable to current player -->
    <script type="text/javascript">
        function loaded() {
            try
            {
                setTimeout("notifyParrent()", 1000);
            }catch(ex){}
        }

        function notifyParrent() {
            try
            {
                window.opener.player_ins = this;
                setTimeout("notifyParrent()", 1000);
            } catch (ex) { }
        }

        function unloaded() {
            try
            {
                window.opener.player_ins = null;
            } catch (ex) { }
        }



        $(document).ready(function () {

            var margin_top = 2;
            if ($(window).height() >= 590) {
                margin_top = ($(window).height() - 590) / 2;
            }
            $(".MainRootCont").css("margin-top", margin_top + "px");

         

        });

        $(window).resize(function () {

            var margin_top = 2;
            if ($(window).height() >= 590) {
                margin_top = ($(window).height() - 590) / 2;
            }
            $(".MainRootCont").css("margin-top", margin_top + "px");



        });

    </script>

</head>







<body class="MainNHypPlayer" onload="loaded();" onunload="unloaded();" style=" overflow:hidden; background:none; background-color:#202020;">
    
    
    <div class="MainRootCont" style=" width:840px;">

    <div id="MainContHolder" style=" width:840px;">



        

    



        <div class="MainMidCont" style=" width:840px; background-color:#353535; border-radius:3px; border:3px solid #232323;">
            <div class="MainMidInnr" style=" width:490px;">
            
          
                <div class="PlayerRoot" style=" margin-top:7px;">
                
                    <div id="HypsterOriginalPlayer"></div>
                    <script type="text/javascript">
                        @switch((string)ViewBag.MEDIA_TYPE)
                        {

                            //--------------------------------------------
                            case "playlist":
                            {
                                <text>
                                var vars = {
                                    mediaType: "playlist",
                                    userID: "@(ViewBag.UserID)",
                                    playlistID: "@(ViewBag.PlaylistID)",
                                    shuffle: "0",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                        
                            //--------------------------------------------
                            case "radio":
                            {
                                <text>
                                var vars = {
                                    mediaType: "radio",
                                    userID: "0",
                                    radio_station: "@ViewBag.Genre",
                                    search: "@ViewBag.search",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                        
                            //--------------------------------------------
                            case "song":
                            {
                                <text>
                                var vars = {
                                    mediaType: "song",
                                    userID: "0",
                                    song_id: "@ViewBag.SongGuid",
                                    song_title: "@ViewBag.SongTitle",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                            //--------------------------------------------
                            default:
                                break;
                        }
                        

                        var params = {
                            allowFullScreen: "true"
                        };
                        var attributes = {
                            id: "HypsterOriginalPlayer",
                            name: "HypsterOriginalPlayer"
                        };  
                        //swfobject.embedSWF("/scripts/DEV_HypsterOriginalPlayer.swf", "HypsterOriginalPlayer", "475", "545", "10.3.0", "/Scripts/expressInstall.swf", vars, params, attributes);
                        swfobject.embedSWF("/scripts/HypsterOriginalPlayer.swf", "HypsterOriginalPlayer", "475", "545", "10.3.0", "/Scripts/expressInstall.swf", vars, params, attributes);
			        </script>
                
                </div>



                
            
            
            </div>





            <div class="AdsCont" style=" margin-top:5px;">
                    <div class="Ad1">
                        <div id="SideAd1_id2328971cvbc">
