@model List<hypster.ViewModels.chartViewModel>
@{
    ViewBag.Title = "Playlists of music charts online";
    ViewBag.Desc = "Listen to playlists of popular music charts online, create and extend your own music playlist";
    Layout = "/Views/Shared/_Layout3.cshtml";
}

@{ int i_counter = 0; }

@foreach (var item in Model)
{   
    <div class="chartHoldCont">
        @{ Html.RenderPartial("~/Views/charts/BuildChart.cshtml", item); }
    </div>
    
    i_counter += 1;
}


<div style="float:left; width:100%; margin:30px 0 30px 0;">
            
        @if (ViewBag.prevPageID > 0)
        {
            <input id="Charts_PrevPage" type="button" onclick="window.location='/charts/page/@ViewBag.prevPageID';" value="PREV PAGE" />
        }

        @if (ViewBag.nextPageID > 0)
        {
            <input id="Charts_NextPage" type="button" onclick="window.location='/charts/page/@ViewBag.nextPageID';" value="NEXT PAGE" />
        }

</div>