@model List<hypster.ViewModels.festivalViewModel>
@{
    ViewBag.Title = "Online playlists of music festival lineups";
    ViewBag.Desc = "Listen to playlists of popular music festivals online, create and extend your own music library";
    Layout = "/Views/Shared/_Layout2.cshtml";
}


@{ int i_counter = 0; }

@foreach (var item in Model)
{   
    <div class="chartHoldCont" @if(i_counter == 0){<text>style="margin-top:-20px;"</text>}>
        @{ Html.RenderPartial("~/Views/festivals/BuildFestival.cshtml", item); }
    </div>
    
    i_counter += 1;
}


<div class="boxContRight">
    <div class="slideRight" style="min-height:45px;">
            
            @if (ViewBag.prevPageID > 0)
            {
                <input id="Charts_PrevPage" type="button" onclick="window.location='/festivals/page/@ViewBag.prevPageID';" value="Prev Page" />
            }

            @if (ViewBag.nextPageID > 0)
            {
                <input id="Charts_NextPage" type="button" onclick="window.location='/festivals/page/@ViewBag.nextPageID';" value="Next Page" />
            }

    </div>
</div>
