@model List<hypster_tv_DAL.newsPost>
@{
    Layout = null;
}
<div class="breakingMCH_Home">
    <div class="hmBrkTitle" onclick="window.location='/breaking';">
        @ViewBag.Title
    </div>

    <div class="breakingMCH_MC">
        <div class="arrLeft">&nbsp;</div>
        <div id='@ViewBag.ID' class="newsContHH1">
            <div class="newsContHHInn">
            @for (int i = 0; i < ViewBag.Length; i++)
            {
                if (i < Model.Count)
                {
                    <div title="@Model[i].post_title" class="brkngItmGenre" onclick="window.location='/breaking/details/@Model[i].post_guid';">
                        <div class="brkngItmPost" style="background-size:195px; background-image:url('http://@System.Configuration.ConfigurationManager.AppSettings["newsHostName"]/imgs/i_posts/@Model[i].post_image');"></div>
                        <div class="brkngItmTitle" style="float:left;padding:7px 0; color:#000000; font-size:14px; margin:0px 5px;">@Model[i].post_title</div>
                    </div>
                }
            }
            </div>
        </div>
        <div class="arrRight">&nbsp;</div>
    </div>
    <script type="text/javascript">
        $(document).ready(function(){
            var SRL_POS_@ViewBag.ID = 0;
            var width = @ViewBag.Width;
            $("#@ViewBag.ID").scrollLeft(SRL_POS_@ViewBag.ID);
            $(".breakingMCH_Home #@ViewBag.ID .newsContHHInn").width(width);
            if ($(".breakingMCH_Home #@ViewBag.ID .newsContHHInn").width() <= 609)
            {
                $(".breakingMCH_Home #@ViewBag.ID .newsContHHInn").parent().siblings().css("visibility","hidden");
            }
            $("#@ViewBag.ID").siblings("div.arrLeft").click(function () {
                SRL_POS_@ViewBag.ID -= 609;
                $("#@ViewBag.ID").siblings("div.arrRight").css("visibility","visible");
                if (SRL_POS_@ViewBag.ID < 0)
                {
                    SRL_POS_@ViewBag.ID = 0;
                    $(this).css("visibility","hidden");
                }
                $("#@ViewBag.ID").animate({ scrollLeft: SRL_POS_@ViewBag.ID }, 700);
            }),
            $("#@ViewBag.ID").siblings("div.arrRight").click(function () {
                SRL_POS_@ViewBag.ID += 609;
                $("#@ViewBag.ID").siblings("div.arrLeft").css("visibility","visible");
                if (SRL_POS_@ViewBag.ID > width)
                {
                    SRL_POS_@ViewBag.ID = width;
                    $(this).css("visibility","hidden");
                }
                $("#@ViewBag.ID").animate({ scrollLeft: SRL_POS_@ViewBag.ID }, 700);
            })
        });
    </script>
</div>
