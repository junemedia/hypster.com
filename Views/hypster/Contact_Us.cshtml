@using Recaptcha;
@{
    ViewBag.Title = "Hypster - free music online - player for tumblr";
    ViewBag.Desc = "";
    
    ViewBag.LinkTag = "<link rel=\"alternate\" media=\"only screen and (max-width: 640px)\" href=\"http://hypster.com/apps/appHypster/contact_us\" >";
}







<div style=" float:left; width:100%; height:219px; background:url(/imgs/contact_us_back.png) no-repeat; margin:0 0 0 0;">
        
</div>







<div class="ContactUsCont">


  
    <div style=" float:left; margin-bottom:20px; width:650px; ">
        @using (Html.BeginForm())
        {
                            
            <div style=" float:right; width:100%;">
            
                <div style=" float:right; width:640px; height:33px; border:1px solid #DEDEDE; background-color:#FFFFFF; border:1px solid #000000; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                    <div style=" float:left;  margin:3px 0 0 0; text-align:left; color:#2f5262;">&nbsp;EMAIL:</div>
                    <input type="text" name="YourEmail" id="YourEmail" value="" style=" float:left; outline: none; width:450px; height:22px; margin:2px 0 0 5px; background-color:#FFFFFF;  border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
                </div>

                <div style=" float:right; width:640px; height:33px; margin:5px 0 0 0; border:1px solid #DEDEDE; background-color:#FFFFFF; border:1px solid #000000; border-radius:2px; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;">
                    <div style=" float:left; margin:3px 0 0 0; text-align:left; color:#2f5262;">&nbsp;SUBJECT:</div>
                    <input type="text" name="Subject" id="Subject" value="" style=" float:left; outline: none; width:450px; height:22px; margin:2px 0 0 5px; background-color:#FFFFFF; border:none; font-family:'Lato', sans-serif; font-weight:lighter; font-size:18px;"  />
