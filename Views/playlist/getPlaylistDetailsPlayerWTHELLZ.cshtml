@model List<hypster_tv_DAL.PlaylistData_Song>
@{
    Layout = null;
    int song_limit = Int32.Parse(System.Configuration.ConfigurationManager.AppSettings["Song_LIMIT"]);
}





@for (int i = 0; i < Model.Count; i++)
{
    <div id="PlItem_@i" class="playlistItemC">
                            
        <img alt="" src="http://i.ytimg.com/vi/@Model[i].YoutubeId/0.jpg" onclick="plVClick('@Model[i].YoutubeId', @i)" />
        <div id="songC_@i" class="songTtl" onclick="plVClick('@Model[i].YoutubeId', @i)">
            @Model[i].Title
        </div>
        <input type="hidden" id="si_@Model[i].YoutubeId" value="@Model[i].id" />
         
    </div>
    
    

    if (i == song_limit)
    {
        break;
    }
}


@if (Model.Count == 0)
{
    <div class="NsongsMsg">
        No songs in this playlist
    </div>
}





<script>

var items_arr = new Array();
@for (int i = 0; i < Model.Count; i++)
{
    <text>items_arr[@i] = '@Model[i].YoutubeId';</text>
}

if(items_arr.length > 1)
{
    $("#Prev_btn").css("display","block");
    $("#Next_btn").css("display","block");
    $("#Shuffle_btn").css("display","block");
}
else
{
    $("#Prev_btn").css("display","none");
    $("#Next_btn").css("display","none");
    $("#Shuffle_btn").css("display","none");
}



CURR_VIDEO = -1;

PlayNextVideo();

</script>  


